Sub VBAChallenge():
    
    'label the columns on the sheet

    Range("I1:L1").Value = Array("Ticker Symbol", "Yearly Change", "Percent Change", "Total Stock Volume")
    
    'add Tickers
    Dim LastRow As Long
    LastRow = Cells(Rows.Count, 1).End(xlUp).Row
    MsgBox "Last Row: " & LastRow
    
    Dim Column As Integer
    Dim Summary_Table_Row As Integer
    Dim Open_Price As Double
    Dim Close_Price As Double
    Dim Change_Value As Double
    Dim Percent_Change As Double
    Dim Stock_Total As Double

    Summary_Table_Row = 2
    Column = 1
    
    Open_Price = Cells(2, 3).Value
    Stock_Total = Cells(2, 7).Value
    
    'add some formatting column K
    'Name that range! then set conditions on it
        '1. highlight positive change in green and negative change in red (REQUIRED)
        '2. format cells 2 places past decimal place (PERSONAL)
        '3. fit cells to headers (var length in column 1 of table)
        
    
    For i = 2 To LastRow
        If Cells(i + 1, Column).Value <> Cells(i, Column).Value Then
        
            'add code to write ticker in column I
            Range("I" & Summary_Table_Row).Value = Cells(i, Column).Value
            
            'find your closing price
            Close_Price = Cells(i, 6).Value
            
            'Find the yearly change
            Change_Price = Close_Price - Open_Price
            
            'Print the yearly change in column J
            Range("J" & Summary_Table_Row).Value = Change_Price
            
            'Find the percent change
            Percent_Change = (Change_Price / Open_Price) * 100
            
            'Print the percent change in column K
            Range("K" & Summary_Table_Row).Value = Percent_Change
            
            'Find the total volume of stock
            Stock_Total = Stock_Total + Cells(i, 7).Value
            
            'Print the volume of stock in column L
            Range("L" & Summary_Table_Row).Value = Stock_Total
            
            'Store the next Open Price
            Open_Price = Cells(i + 1, 3).Value

            'Store the next Stock Volume
            Stock_Total = Cells(i + 1, 7).Value
            
            'add code to write on the next line down on the table
            Summary_Table_Row = Summary_Table_Row + 1
        
        Else
            'keep adding stock volume
            Stock_Volume = Stock_Volume + Cells(i, 7).Value
            
        End If
        
    Next i
    
   MsgBox ("Finished")
    
    'DONE add yearly change
        'start at ln 2 and grab open price
        'i has close price, next i has next open price
        
    'DONE add percent change
        'based on the same two value used above (open price, close price)
        '
    'add total stock volume
        'running total of stock volume/day gives you volume/year
    
    'add conditional formatting to the array (see VBA example "grade book")
    
    'do it to all the sheets
    
    'Challenge: add a new array
        'note: will require a loop (session)
        'Greatest % Increase
        'Greatest % Decrease
        'Greatest Total Volume
    'do it to all sheets
    
End Sub
